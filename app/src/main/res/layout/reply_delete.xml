<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cardView3MarginStart"
        android:layout_marginBottom="@dimen/cardView3MarginBottom"
        android:paddingBottom="@dimen/cardView3PaddingBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/constraint3MarginBottom"
            android:paddingBottom="@dimen/constraint3PaddingBottom">

            <TextView
                android:id="@+id/replyTextView"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/replyDeleteTextViewHeight"
                android:layout_marginStart="@dimen/replyDeleteTextViewMarginStart"
                android:gravity="bottom"
                android:text="Reply message"
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="@dimen/replyDeleteIconWidth"
                android:layout_height="@dimen/replyDeleteIconHeight"
                android:layout_marginTop="@dimen/replyDeleteIconMarginTop"
                android:layout_marginRight="@dimen/replyDeleteIconMarginRight"
                android:padding="@dimen/replyDeleteIconPadding"
                android:src="@drawable/delete_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/replyView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/replyDeleteViewHeight"
                android:layout_marginLeft="@dimen/replyDeleteViewMarginLeft"
                android:layout_marginTop="@dimen/replyDeleteViewMarginTop"
                android:layout_marginRight="@dimen/replyDeleteViewMarginRight"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/replyTextView" />

            <EditText
                android:id="@+id/replyEditTextDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/replyEditTextDeleteMarginLeft"
                android:layout_marginTop="@dimen/replyEditTextDeleteMarginTop"
                android:layout_marginRight="@dimen/replyEditTextDeleteMarginRight"
                android:layout_marginBottom="@dimen/replyEditTextDeleteMarginBottom"
                android:hint="Type reply message to be sent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/replyView" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>