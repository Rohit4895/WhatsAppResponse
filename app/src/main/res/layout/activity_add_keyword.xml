<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.AddKeyword">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/addMessageRecycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/addMessageRecyclerHeight"
        android:layout_marginBottom="@dimen/addMessageRecyclerMarginBtm"
        app:layout_constraintBottom_toTopOf="@+id/addKey"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/addKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/addKeyMarginStart"
        android:layout_marginEnd="@dimen/addKeyMarginEnd"
        android:layout_marginBottom="@dimen/addKeyMarginBottom"
        android:background="@color/colorPrimary"
        android:text="Add Keyword"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>